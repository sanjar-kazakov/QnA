- if best_answer.present?
  div id="answer-#{best_answer.id}" class="best-answer"
    h3
      | Best answer:
    p
      | Answered by:
      = best_answer.user.email
    p
      | Created at:
      = best_answer.created_at.strftime("%Y-%m-%d %H:%M")
    p
      | Rating:
      = render "shared/votes", resource: best_answer
    p
      = best_answer.body
    p
      = render 'shared/files_attachment', resource: best_answer

    = render 'shared/links_attachment', resource: best_answer

    = render 'shared/answers/answer_controls', answer: best_answer, question: @question, best_answer: @best_answer
